@model timeTracker.Web.Models.AnnualLeaveChartModel
@{
    ViewBag.Title = "CreateChart";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <div class="form-horizontal">
        <h4>Annual Leave </h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @for = "txtName", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Name, (IList<SelectListItem>)ViewBag.Users, new { @class = "form-control", @id = "txtName", @name = "txtName" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
             <input id="btnSubmit" type="submit" value="View" class="btn btm-block btn-primary"/>
           </div>   
        </div>
    </div>

    <br />
    <br />

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}

